<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Sign In</title>
  </head>
  <body>
    <h1>Log in</h1>
    <form id="frm">
      Email: <input type="email" name="email" id="email" required><p></p>
      Password: <input type="password" name="password" id="password" required><p></p>
      <input type="button" id="btn_submit" value="Signin">
    </form>
  </body>
  <script src="/js/jquery.min.js" charset="utf-8"></script>
  <script src="/js/jquery.validate.js" charset="utf-8"></script>
  <script type="text/javascript">
$(function () {
  $('#frm').validate();
  $('#btn_submit').click( function(){
    if(!$('#frm').valid()) return false;
    $.post(
      '/login',
      { email: $('#email').val(), password: $('#password').val()}
    ).done(function(res){
      if (res.status) {
        location.href = '/';
      }else {
        $('#password').select();
        alert(res.msg);
      }
    }).fail(function(err){
      alert(err.status + ' ' + err.responseText);
    });
  });
    <% if(messages.warning){ %>
    alert('<%=messages.warning%>');
    <% } %>
  });
  </script>
</html>
